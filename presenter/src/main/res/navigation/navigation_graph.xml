        <action
            android:id="@+id/goHome"
            app:destination="@id/homeFragment" />

    </fragment>

    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.sebag.florent.presenter.view.fragments.auth.registration.RegistrationFragment"
